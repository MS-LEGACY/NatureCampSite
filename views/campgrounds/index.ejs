<% layout('layouts/boilerplate') %>
<script>
    const Api_key = '<%= process.env.MAPTILER_GEOCODER %>';
    let campgrounds = '<%- JSON.stringify(campgrounds) %>';
</script>
<div id="map" style="width: 100%; height: 500px;" class="mb-5"></div>
<div class="mt-5">
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add a Campground</a>
    </div>
</div>

<% for(let camp of campgrounds) {%>
<div class="cards mb-3">
    <div class="row py-3">
        <div class="col-md-4">
            <img src="<%= camp.images.length!=0 ? camp.images[0].url : '#' %>" alt="Image of a campground"
                class="img-fluid">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title%></h5>
                <p class="card-text"><%= camp.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= camp.location %> </small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View More</a>
            </div>
        </div>
    </div>
</div>
<% } %>

<script src="/javascripts/clusterMap.js"></script>